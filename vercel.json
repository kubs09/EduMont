{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/build",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index?path=:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "true",
    "GENERATE_SOURCEMAP": "false",
    "TSC_COMPILE_ON_ERROR": "true",
    "DISABLE_ESLINT_PLUGIN": "true",
    "USE_BCRYPTJS": "true",
    "USE_SUPABASE": "true"
  }
}
