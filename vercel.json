{
  "version": 2,
  "buildCommand": "npm install --prefix backend && cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js?path=$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "true",
    "GENERATE_SOURCEMAP": "false",
    "TSC_COMPILE_ON_ERROR": "true",
    "DISABLE_ESLINT_PLUGIN": "true",
    "USE_BCRYPTJS": "true"
  }
}
